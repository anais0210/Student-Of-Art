{% extends 'dashboard/index_dashboard.html.twig' %}

{% block title %}Mes ventes privée{% endblock %}

{% block content %}
{{form_start(form)}}
        <div class="row">
            <div class="col-md-3 pl-3">
                <div class="form-group">
                    <label>{{form_label(form.nameEvent)}}</label>
                    {{form_widget(form.nameEvent)}}
                    {{ form_errors(form.nameEvent) }}
                </div>
            </div>
            <div class="col-md-3 pl-1">
                <div class="form-group">
                    <label>{{form_label(form.oeuvres)}}</label>
                    {{form_widget(form.oeuvres)}}
                    {{ form_errors(form.oeuvres) }}
                </div>
            </div>
            <div class="clo-md-3 pl-1">
                <div class="form-group">
                    <label>{{form_label(form.date)}}</label>
                    {{form_widget(form.date)}}
                    {{ form_errors(form.date) }}
                </div>
            </div>
            <div class="clo-md-3 pl-3">
                <div class="form-group">
                    <label>{{form_label(form.numberPlaces)}}</label>
                    {{form_widget(form.numberPlaces)}}
                    {{ form_errors(form.numberPlaces) }}
                </div>
            </div>
            <div class="clo-md-3 pl-3">
                <div class="form-group">
                    <label>{{form_label(form.address)}}</label>
                    {{form_widget(form.address)}}
                    {{ form_errors(form.address) }}
                </div>
            </div>

        </div>



        {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.id == form.vars.value.id %}
        {% endif %}
 <button type="submit" class="btn btn-info btn-fill pull-right">Enregistrer la vente privée</button>
    <div class="clearfix"></div>
{{form_end(form)}}
{{ render(controller('App\\Controller\\PrivateSellController::list')) }}
{% endblock %}
