{% block body %}
  
    <!-- Page Content -->
    <div class="container">
      <!-- Page Heading -->
      <h1 class="my-4">
        <small>Nos artistes</small>
      </h1>
      <div class="row">
        {% for artist in artistes %}
          <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
            <div class="card h-100">
              <a href="#"><img class="card-img-top" src="http://placehold.it/150x75" alt="image"></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#">{{ artist.username }}</a>
                </h4>
                <p class="card-text"> voici une courte {{ artist.biography }} de notre artiste. Il est née le {{ artist.birthdayDate|date("d/m/Y") }} à {{ artist.city }} en {{ artist.country }}. {{ artist.username }} est {{ artist.categories|join }}</p>
              </div>
            </div>
          </div>
      {% endfor %}
    </div>

      <ul class="pagination justify-content-center">
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Previous">
            <span aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">1</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">2</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#">3</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="#" aria-label="Next">
            <span aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </li>
      </ul>

    </div>
{% endblock %}